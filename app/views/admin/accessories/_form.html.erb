<%= form_for(@accessory) do |f| %>
  <%= error_messages_for @accessory %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :service_id %><br />
    <%= f.collection_select :service_id, @services, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

