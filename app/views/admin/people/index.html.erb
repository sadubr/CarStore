<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.first_name %></td>
    <td><%= person.last_name %></td>
    <td><%= person.user_id %></td>
    <td><%= link_to 'Show', admin_person_path(person) %></td>
    <td><%= link_to_edit [:edit, :admin, person] %></td>
    <td><%= link_to_destroy [:admin, person] %></td>
  </tr>
<% end %>
</table>

